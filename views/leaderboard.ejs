<%- include('./partials/upper.ejs') %>
<style>
    .leaderBoard{
        display: flex;
        flex-direction: column;
        margin-left: 50px;
        margin-right: 50px;
    }
    .leaderBoard>div{
        display: flex;
        padding: 5px;
        background-color: aliceblue;
        border: 1px dashed black;
        margin: 5px;
    }
    @media (max-width: 768px) {
       .leaderBoard>div{
        flex-wrap: wrap;
       }
       .leaderBoard>div>span{
           margin-right: auto;
          margin-left: 0;
       }
    }
    .leaderBoard>div>span{
        margin-right: 10px;
    }
</style>

<h1 style="text-align: center;margin-top: 30px;">Leaderboard 🏆</h1>
<a style="margin-left: 55px;" href="/striverSheet">back 👈</a>
<div class="leaderBoard">

    <% for(let i=0;i<usersAndNumberOfQuestionsTheySolved.length;++i) { %>
    <div><%= usersAndNumberOfQuestionsTheySolved[i].userName %> &nbsp;&nbsp;&nbsp; <i> ( <%= usersAndNumberOfQuestionsTheySolved[i].college %> )</i> <span style="margin-left: auto;"> <%= usersAndNumberOfQuestionsTheySolved[i].questionsDoneByThisUser %>/185</span> <progress value="<%= usersAndNumberOfQuestionsTheySolved[i].percentageDone %>" max="100"></progress></div>
    <% } %>

</div>

